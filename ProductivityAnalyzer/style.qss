/* style.qss */
QWidget {
    background-color: #2C3E50;
    color: #ECF0F1;
    font-family: Arial, sans-serif;
}

QPushButton {
    background-color: #3498DB;
    border: none;
    color: white;
    padding: 10px;
    font-size: 16px;
    border-radius: 5px;
}

QPushButton:hover {
    background-color: #2980B9;
}

QTextEdit {
    background-color: #34495E;
    border: none;
    color: #ECF0F1;
    padding: 10px;
    font-size: 14px;
    border-radius: 5px;
}
